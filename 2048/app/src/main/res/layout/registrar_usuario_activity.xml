<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#774444"
    tools:context=".RegistroUsuario">

    <TextView
        android:id="@+id/infoID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Introduce tus datos en los siguientes campos:"
        android:textStyle="italic|bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.5dp"
            android:hint="Sin Nombre"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/IDUser_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:hint="4444"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/country_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="EspaÃ±a"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuario"
        android:layout_marginTop="50dp"
        android:onClick="onClick"/>
</LinearLayout>