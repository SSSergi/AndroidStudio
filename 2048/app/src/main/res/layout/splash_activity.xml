<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/marco"
        android:orientation="vertical">
        <TextView
            android:id="@+id/startBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Start New Game  "
            android:layout_gravity="center"
            android:layout_marginTop="175dp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/marco_2"/>

        <TextView
            android:id="@+id/ManageScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="  Manage Scores  "
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/marco_2"/>

        <TextView
            android:id="@+id/NewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="  Create Player  "
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/marco_2"/>

        <TextView
            android:id="@+id/LogUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="  Log Player  "
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/marco_2"/>

        <TextView
            android:id="@+id/Salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="  Salir  "
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/marco_2"/>
    </LinearLayout>
</LinearLayout>