<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ButtonActivity"
    android:background="#DFDFDF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You were expecting something profound?"
            android:textColor="#FF0E0E"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="#C8C8C8">

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="#C8C8C8"
            android:src="@drawable/logocomonware2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/logocomonware" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBC00">

        <EditText
            android:id="@+id/textSend"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textListener"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/cadena_texto"
            android:layerType="none"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This checkbox is: unchecked"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a beautiful color"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radiobtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:onClick="onRadiobtnclicked"/>

        <RadioButton
            android:id="@+id/radiobtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:onClick="onRadiobtnclicked"/>

        <RadioButton
            android:id="@+id/radiobtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:onClick="onRadiobtnclicked"/>

    </RadioGroup>

</LinearLayout>